	<!-- 단건 조회 -->
	<select id="getMember" parameterType="member" resultType="member">
		SELECT * FROM MEMBER
			WHERE MEMBER_NO = #{memberNo}
	</select>
	
	<!-- 등록 -->
	<insert id="insertMember" parameterType="member">
		INSERT INTO MEMBER (
								MEMBER_NO,
								MEMBER_EMAIL, MEMBER_NICK, MEMBER_NAME, MEMBER_PW,
								MEMBER_IMG, MEMBER_INTRO, MEMBER_POINT,
								SIGNUP_DATE
							)
		VALUES (
					MEMBER_SEQ.NEXTVAL,
					#{memberEmail}, #{memberNick}, #{memberName}, #{memberPw},
					#{memberImg}, #{memberIntro}, #{memberPoint},
					#{signupDate}
				)
	</insert>
	
	<!-- 수정 -->
	<update id="updateMember" parameterType="member">
		UPDATE MEMBER SET MEMBER_PW = #{memberPw},
						  MEMBER_NICK = #{memberNick},
						  MEMBER_IMG = #{memberImg},
						  MEMBER_INTRO = #{memberIntro}
		WHERE MEMBER_NO = #{memberNo}
	</update>
	
	<!-- 삭제 -->
	<delete id="deleteMember" parameterType="member">
		DELETE FROM MEMBER WHERE MEMBER_NO = #{memberNo}
	</delete>
	
