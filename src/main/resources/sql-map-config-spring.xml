<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
 PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true" />
	</settings>
	
	<!-- Alias 설정 -->
	<typeAliases>
	
		<!-- 유저 예시 -->
		<typeAlias alias="user" type="com.yedam.dailycomma.user.UserDTO" />
		<typeAlias alias="userSearch" type="com.yedam.dailycomma.user.UserSearchDTO" />
		
		<!-- 사장님 회원가입 설정 -->
		<typeAlias alias="host" type="com.yedam.dailycomma.host.HostDTO" />
		<typeAlias alias="hostSearch" type="com.yedam.dailycomma.host.HostSearchDTO" />		
	
		<!-- 회원 설정 -->
		<typeAlias alias="member" type="com.yedam.dailycomma.member.MemberDTO"/>
		<typeAlias alias="memberSearch" type="com.yedam.dailycomma.member.MemberSearchDTO"/>
		
		<!-- 관리자 검색 -->
		<typeAlias alias="adminSearch" type="com.yedam.dailycomma.admin.AdminSearchDTO"/>
		
		<!-- 예약 설정 -->
		<typeAlias alias="reservation" type="com.yedam.dailycomma.reservation.ReservationDTO"/>
		<typeAlias alias="reservationSearch" type="com.yedam.dailycomma.reservation.ReservationSearchDTO"/>
		
		<!-- 룸 상세 -->
		<typeAlias alias="detailRoom" type="com.yedam.dailycomma.room.RoomDTO"/>
		<typeAlias alias="roomPost" type="com.yedam.dailycomma.room.RoomPostDTO" />

		<!-- 숙소 상세 -->
		<typeAlias alias="lodgment" type="com.yedam.dailycomma.lodgment.LodgmentDTO"/>
		<typeAlias alias="lodgmentSearch" type="com.yedam.dailycomma.lodgment.LodgmentSearchDTO" />
		
		<!-- 마이페이지 -->
		<typeAlias alias="myPage" type="com.yedam.dailycomma.myPage.MyPageDTO"/>

		<!-- tour(cast) 설정 -->
		<typeAlias alias="tour" type="com.yedam.dailycomma.tour.TourDTO"/>
		
		<!-- 사장관리 -->
		<typeAlias alias="managementDTO" type="com.yedam.dailycomma.management.ManagementDTO"/>
		
		<typeAlias alias="tourSearch" type="com.yedam.dailycomma.tour.TourSearchDTO"/>

        <!-- 후기 -->
        <typeAlias alias="postscript" type="com.yedam.dailycomma.postscript.PostscriptDTO"/>
	</typeAliases>	
</configuration>